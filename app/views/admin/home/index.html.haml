.container
  .row
    .col-md-9.col-md-offset-1
      %h2.text-center.heading-font
        Check out latest activities
      .panel.panel-default.grid
        %table.table.table-condensed
          %thead
            %tr
              %th
                Student's email
              %th{:align => "center"}
                Nr. of sessions
              %th
                Last sign in
          %tbody
            - @scholars.sort{|l,r| l.last_sign_in_at <=> r.last_sign_in_at}.each do |s|
              %tr
                %td
                  = s.email
                %td{:align => "center"}
                  = s.sign_in_count
                %td
                  %i
                    = s.last_sign_in_at.strftime("last signed in at: %d-%m-%Y, %H:%M:%S")

                


        

